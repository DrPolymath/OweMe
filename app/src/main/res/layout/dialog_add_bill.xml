<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:gravity="center_horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/addBill"
        android:layout_width="300dp"
        android:layout_height="400dp"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:background="@color/yellow"
            android:backgroundTint="@color/yellow"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_headerCreateBill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="12dp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_vertical"
                android:text="Create Bill"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:translationX="19dp"
                android:translationY="16dp"
                app:drawableLeftCompat="@drawable/ic_clipboard" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_event"
            android:layout_width="270dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_edit_text"
            android:ems="12"
            android:fontFamily="@font/roboto"
            android:hint="Event name"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:paddingStart="10dp"
            android:textSize="14sp"
            android:translationY="80dp" />

        <EditText
            android:id="@+id/et_date"
            android:layout_width="270dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_edit_text"
            android:ems="12"
            android:focusable="false"
            android:fontFamily="@font/roboto"
            android:hint="Date"
            android:inputType="date"
            android:paddingLeft="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="14sp"
            android:translationY="148dp" />

        <EditText
            android:id="@+id/ET_groupName"
            android:layout_width="270dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_edit_text"
            android:ems="12"
            android:fontFamily="@font/roboto"
            android:hint="Amount"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:paddingStart="10dp"
            android:textSize="14sp"
            android:translationY="216dp" />

        <Spinner
            android:id="@+id/spin_group"
            android:layout_width="270dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_edit_text"
            android:entries="@android:array/emailAddressTypes"
            android:minHeight="32dp"
            android:spinnerMode="dropdown"
            android:translationY="284dp" />

    </androidx.cardview.widget.CardView>
</LinearLayout>